void evenSum(){
	int n=0;
	cout<<"how many integers? ";
	cin>>n;
	int num=0;
	int sum=0;
	int even_max=0;
	int count=0;
	for(int i=0;i<n;++i){
		cout<<"next integer? ";
		cin>>num;
		if(num%2==0){
		sum=sum+num;
		++count;
		if(even_max<num)even_max=num;
		}
	}
	cout<<"even sum = "<<sum<<"\n";
	cout<<"even max = "<<even_max<<"\n";
}
